{# templates/emails/full_refund.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Order Refund</title>
</head>
<body>
    <h1>Your order has been fully refunded</h1>

    <p>Order Number: {{ order.id }}</p>
    <p>Refund Date: {{ "now"|date('Y-m-d H:i') }}</p>
    <p>Name: {{ order.firstName|title }} {{ order.lastName|title }}</p>

    <h2>Refunded Items:</h2>
    <ul>
        {% for item in order.items %}
            <li>
                {{ item.name }} - {{ item.price|format_currency(app_currency, {rounding_mode: 'floor'}) }}
            </li>
        {% endfor %}
    </ul>

    <p>Total Refund: {{ order.total|format_currency(app_currency, {rounding_mode: 'floor'}) }}</p>

    <p>If you have any questions about your refund, please contact us.</p>
</body>
</html>