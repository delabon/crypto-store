{% extends 'base.html.twig' %}

{% block title %}Admin - Users{% endblock %}

{% block body %}
    <h1>Users</h1>
    <p>Manage your users.</p>

    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Date</th>
                <th>Status</th>
                <th style="width: 150px">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.createdAt|date('Y-m-d') }}</td>
                    <td>{{ user.status|title }}</td>
                    <td>
                        <div class="d-flex">
                            <a href="{{ path('admin_user_ban', {id: user.id}) }}" class="btn btn-sm btn-danger">Ban</a>
                            <a href="{{ path('admin_user_unban', {id: user.id}) }}" class="btn btn-sm btn-secondary">UnBan</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
